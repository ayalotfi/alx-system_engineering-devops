#!/bin/bash

# Function to display information about a subdomain
display_info() {
    local subdomain="$1"
    local domain="$2"
    local record_type="$3"
    local destination="$4"
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Check if the script is provided with the correct number of arguments
if [ $# -lt 1 ] || [ $# -gt 2 ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"

# If subdomain is not provided, list the default subdomains
if [ -z "$subdomain" ]; then
    subdomains=("www" "lb-01" "web-01" "web-02")
else
    subdomains=("$subdomain")
fi

# Query and display information for each subdomain
for sub in "${subdomains[@]}"; do
    output=$(dig +short "$sub.$domain" | awk '{print $1}')
    if [ -z "$output" ]; then
        echo "The subdomain $sub does not exist."
    else
        record_type=$(dig "$sub.$domain" | grep -A1 'ANSWER SECTION:' | awk 'NR==2 {print $4}')
        display_info "$sub" "$domain" "$record_type" "$output"
    fi
done

